<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<Content>

	<Metadata>
		<Title>Example profile configurations</Title>
		<Filename>EXAMPLE.profile.config.xml</Filename>
		<Description></Description>
		<Tags>powershell, configuration, installation, profile</Tags>
		<Project></Project>
		<Author>Janik von Rotz</Author>
		<AuthorContact>www.janikvonrotz.ch</AuthorContact>
		<CreateDate>2013-04-11</CreateDate>
		<LastEditDate>2013-05-31</LastEditDate>
		<Version>2.0.0</Version>
	</Metadata>

	<Configuration>
			
		<Features>
		
			<Feature>
				<Name>Git Update Task</Name>
			</Feature>		

			<Feature>
				<Name>Powershell Remoting</Name>
			</Feature>	
			
			<Feature>
				<Name>Enable Open Powershell here</Name>
			</Feature>
						
			<Feature>
				<Name>Custom PowerShell CLI</Name>
			</Feature>	
			
			<Feature>
				<Name>Autoinclude Functions</Name>
			</Feature>
			
			<Feature>
				<Name>Custom Aliases</Name>
			</Feature>	
			
			<Feature>
				<Name>Add ISE Profile Script</Name>
			</Feature>	
			
			<Feature>
				<Name>Transcript Logging</Name>
			</Feature>
			
			<Feature>
				<Name>Multi Remote Management</Name>
			</Feature>	
			
			<Feature>
				<Name>Get Quote Of The Day</Name>
			</Feature>

		</Features>
		
		<SystemVariables>
			
			<SystemVariable>
				<Value>apps\Git\cmd</Value>
				<Name>Path</Name>
				<RelativePath>true</RelativePath>
				<Target>Machine</Target>
			</SystemVariable>
			
			<SystemVariable>
				<Value>apps\Git\bin</Value>
				<Name>Path</Name>
				<RelativePath>true</RelativePath>
				<Target>Machine</Target>
			</SystemVariable>
						
		</SystemVariables>
				
		<RegistryEntries>	
		
			<RegistryEntry>
				<Path>HKCU:\Software\Microsoft\Windows\CurrentVersion\Explorer\Advanced</Path>
				<Name>HideFileExt</Name>
				<Value>0</Value>
			</RegistryEntry>
			
			<RegistryEntry>
				<Path>HKCU:\Software\Microsoft\Windows\CurrentVersion\Explorer\Search\PrimaryProperties\UnindexedLocations</Path>
				<Name>SearchOnly</Name>
				<Value>00000000</Value>
			</RegistryEntry>
			
		</RegistryEntries>
		
	</Configuration>

</Content>